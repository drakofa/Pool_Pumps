            <Image.OpacityMask>
                <ImageBrush ImageSource="IMG/kran.jpg"/>
            </Image.OpacityMask>
        </Image>
        <Image HorizontalAlignment="Left" Height="202" Margin="57,404,0,0" VerticalAlignment="Top" Width="207" Source="IMG/Nasos-dlya-vodyi-dlya-dachi-109-2443875026.jpg"/>
